{
    "name": "GBF DropCounter Extension",
    "description": "Counting by Shift + FunctionKey",
    "version": "1.0.0",
    "manifest_version": 2,
    "content_scripts": [{
        "matches": ["http://game.granbluefantasy.jp/*"],
        "js": ["./js/background.js"]
    }],
    "icons": {
        "128": "./img/icon.png"
    },
    "permissions":[
        "storage"
    ],
    "browser_action":{
        "default_icon": {
            "128": "./img/icon.png"
        },
        "default_title":"GBF DropCounter",
        "default_popup":"popup.html"
    }
}
